@page
@model MovieWebsite.Pages.Clients.IndexModel
@{
}

<br>
<h2>List of Movies</h2>
<a class='btn btn-primary btn-sm' href='/Clients/Create'>New Movie</a>
<table class="table">
    <thead>
        <tr>
            <th>FilmID</th>
            <th>FilmTitel</th>
            <th>Instruktør</th>
            <th>Årstal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var client in Model.listClients)
        {
            <tr>
                <td>@client.FilmID</td>
                <td>@client.FilmTitel</td>
                <td>@client.Instruktør</td>
                <td>@client.Årstal</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@client.FilmID">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@client.FilmID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>