@page
@model MovieWebsite.Pages.Clients.CreateModel
@{
}

<br>
<h2>Ny Film</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-labet='Close'></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">FilmTitel</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="FilmTitel" value="@Model.clientInfo.FilmTitel">
        </div>
    </div>
        <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Instruktør</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Instruktør" value="@Model.clientInfo.Instruktør">
        </div>

        @if (Model.SuccessMessage.Length > 0){
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class='alert alert-success alert-dismissible fade show' role='alert'>
                        <strong>@Model.SuccessMessage</strong>
                        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label'close'></button>
                    </div>
                </div>
            </div>

        }

    </div>
        <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Årstal</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Årstal" value="@Model.clientInfo.Årstal">
        </div>
    </div>
</form>